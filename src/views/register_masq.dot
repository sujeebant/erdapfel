<div class="register_masq_panel">
  {{? (!this.isRegistered)}}
    <h1 class="register_masq_panel__title">
      {{= _('Register with masq', 'masq') }}
    </h1>
    <p>
      {{= _('We use MASQ to keep your personal data safe', 'masq') }}
    </p>
    {{? (!this.registering)}}
      <button class="register_masq_panel__action" {{= click(this.register, this) }}>
        {{= _('Register', 'masq') }}
      </button>
    {{?}}
    {{? this.registering}}
      <button class="register_masq_panel__action">
        {{= _('Register in progress', 'masq') }}
      </button>
    {{?}}
  {{?}}
  {{? this.isRegistered}}
    <div class="loggedin_masq_panel__profile_info">
      <img src={{= this.profileImage }} class="loggedin_masq_panel__profile_image">
      <p class="loggedin_masq_panel__title">
        {{= this.username }}
      </p>
    </div>
    <button class="register_masq_panel__action" {{= click(this.unregister, this) }}>
      {{= _('Logout', 'masq') }}
    </button>
  {{?}}
</div>
